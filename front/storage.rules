rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Is user authenticated?
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Is user owner of the path? 
    // Assumes path structure: /users/{userId}/...
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper: Is valid file upload?
    function isValidFileUpload() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB limit
             && request.resource.contentType.matches('image/.*'); // Image only
    }

    // User Data Path
    match /users/{userId}/{allPaths=**} {
      // Read: Authenticated users can read (e.g., profile pics)
      allow read: if isAuthenticated();
      
      // Write: Owner only, with validation
      allow create, update: if isOwner(userId) && isValidFileUpload();
      allow delete: if isOwner(userId);
    }
    // Default: Deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
