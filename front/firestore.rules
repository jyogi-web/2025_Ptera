rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Validation Helpers ---
    
    // Check if the data has all required fields
    // requiredFields: list of string field names
    function hasAllRequiredFields(data, requiredFields) {
      return data.keys().hasAll(requiredFields);
    }
    
    // Check if the field is a string
    function isString(data, field) {
      return data.get(field, '') is string;
    }
    
    // Check if the field is an integer
    function isInteger(data, field) {
      return data.get(field, 0) is int;
    }

    // Check if a field has not changed (immutability)
    function isUnchanged(field) {
      return request.resource.data.get(field, null) == resource.data.get(field, null);
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{userId} {
      
      // Validation logic for user document
      function isValidUser() {
        let user = request.resource.data;
        
        // 1. Required fields check
        let hasFields = hasAllRequiredFields(user, ['displayName', 'email', 'createdAt', 'updatedAt']);
        
        // 2. Type validation
        let validTypes = isString(user, 'displayName') && 
                         (user.get('createdAt', null) is timestamp) &&
                         (user.get('updatedAt', null) is timestamp);

        // 3. Logic validation
        let validEmail = user.email.matches('^[^@]+@[^@]+\\.[^@]+$');
        // allow optional age/bio if present
        let validLogic = user.displayName.size() > 0 && 
                         user.displayName.size() < 100;

        return hasFields && validTypes && validEmail && validLogic;
      }

      allow read: if isAuthenticated();
      
      allow create: if isOwner(userId) && isValidUser();
      
      allow update: if isOwner(userId);
                    // && isValidUser() // Simplify update for now to avoid strict validation blocking simple updates like circleId
                    
      allow delete: if isOwner(userId);
    }

    // Circles Collection
    match /circles/{circleId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated(); // For joining (updating memberIds)
    }

    // Cards Collection
    match /cards/{cardId} {
      allow read: if isAuthenticated();
      // Allow create if authenticated (validation is handled in client/function mostly, but basic auth check is needed)
      allow create: if isAuthenticated();
      // Allow update/delete if creator
      allow update, delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }

    // Battles Collection
    match /battles/{battleId} {
      // 開発中は認証済みユーザーなら誰でも読み取り可能
      // TODO: 本番環境ではバトル参加者のみに制限する
      allow read: if isAuthenticated();

      // バトルの作成・更新はバックエンドのみ
      allow create, update: if false;
      
      // フロントエンドから終了時に削除するため許可
      allow delete: if isAuthenticated();
    }

    // Battle Requests Collection (Matching)
    match /battle_requests/{requestId} {
      // 認証済みユーザーなら読み取り可能
      allow read: if isAuthenticated();
      
      // 作成・更新はバックエンドのみ
      allow create, update: if false;
      
      // フロントエンドから終了時に削除するため許可 (User correction)
      allow delete: if isAuthenticated();
    }

    // Default rule: Deny everything else by default for safety
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
